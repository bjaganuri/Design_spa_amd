<div>
    <% if(!admin) { %>
        <h2>You are not authorized to use this feature</h2>
    <% } %>
    <% if(admin) { %>
	<div class="col-sm-12">
		<table class="table table-striped table-bordered userMasterDataTable">
			<tbody>
				<col width="25%">
				<col width="75%">
				<tr>
					<th colspan="2" style="padding-left:25%">User Master Data</th>
				</tr>
				<tr>
					<td><b>Name</b></td>
					<td>{{userDataToview.name}}</td>		
				</tr>
				<tr>
					<td><b>Date Of Birth</b></td>
					<td>{{userDataToview.dob}}</td>
				</tr>
				<tr>
					<td><b>Gender</b></td>
					<td>{{userDataToview.gender}}</td>
				</tr>
				<tr>
					<td><b>Email</b></td>
					<td>{{userDataToview.email}}</td>
				</tr>
				<tr>
					<td><b>Mobile</b></td>
					<td>{{userDataToview.mobile}}</td>
				</tr>
				<tr>
					<td><b>Username</b></td>
					<td>{{userDataToview.username}}</td>
				</tr>
				<tr>
					<td><b>Alternate Mobile</b></td>
					<td>{{userDataToview.altMobile}}</td>
				</tr>
				<tr>
					<td><b>Altername Email</b></td>
					<td>{{userDataToview.altEmail}}</td>
				</tr>
				<tr>
					<td><b>Admin</b></td>
					<td>
						<span>{{userDataToview.admin}}</span>
						<span ng-if="!userDataToview.ownProfile">
							<button ng-show="!userDataToview.admin" ng-click="lockUnlockAccount({username:userDataToview.username , email:userDataToview.email , admin:'Grant'})" class="btn btn-primary" style="margin-left:25px;" title="Grant admin rights to {{userDataToview.name}}">Grant</button>
							<button ng-show="userDataToview.admin" ng-click="lockUnlockAccount({username:userDataToview.username , email:userDataToview.email , admin:'Revoke'})" class="btn btn-primary" style="margin-left:25px;" title="Revoke admin rights from {{userDataToview.name}}">Revoke</button>
						</span>
					</td>
				</tr>
				<tr>
					<td><b>Operational Status</b></td>
					<td>
						<span ng-show="userDataToview.opState !== 'LOCKED'">
							<span class="text-success">{{userDataToview.opState}}</span>
							<button ng-if="!userDataToview.ownProfile" ng-click="lockUnlockAccount({username:userDataToview.username, email:userDataToview.email , action:'Lock'})" class="btn btn-primary" style="margin-left:25px;" title="Lock forever {{userDataToview.name }}'s account">Lock</button>
						</span>
						<span ng-show="userDataToview.opState == 'LOCKED'">
							<span class="text-danger">{{userDataToview.opState}}</span>
							<button ng-if="!userDataToview.ownProfile" ng-click="lockUnlockAccount({username:userDataToview.username, email:userDataToview.email , action:'Unlock'})" class="btn btn-primary" style="margin-left:25px;" title="Lock forever {{userDataToview.name }}'s account">Unlock</button>
						</span>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
    <% } %>
</div>