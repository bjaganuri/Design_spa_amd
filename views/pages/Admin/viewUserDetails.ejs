<div>
    <% if(!admin) { %>
        <h2>You are not authorized to use this feature</h2>
    <% } %>
    <% if(admin) { %>
	<div class="col-sm-12">
		<table class="table table-striped table-bordered userMasterDataTable" ng-if="userDataToview.exists">
			<tbody>
				<col width="25%">
				<col width="75%">
				<tr>
					<th colspan="2" class="text-justify">User Master Data</th>
				</tr>
				<tr>
					<td><b>Name</b></td>
					<td>{{userDataToview.name}}</td>		
				</tr>
				<tr>
					<td><b>Date Of Birth</b></td>
					<td>{{userDataToview.dob | date:'mediumDate'}}</td>
				</tr>
				<tr>
					<td><b>Gender</b></td>
					<td>{{userDataToview.gender}}</td>
				</tr>
				<tr>
					<td><b>Email</b></td>
					<td>{{userDataToview.email}}</td>
				</tr>
				<tr>
					<td><b>Mobile</b></td>
					<td>{{userDataToview.mobile}}</td>
				</tr>
				<tr>
					<td><b>Username</b></td>
					<td>{{userDataToview.username}}</td>
				</tr>
				<tr>
					<td><b>Alternate Mobile</b></td>
					<td>{{userDataToview.altMobile}}</td>
				</tr>
				<tr>
					<td><b>Altername Email</b></td>
					<td>{{userDataToview.altEmail}}</td>
				</tr>
				<tr>
					<td><b>Created At</b></td>
					<td>{{userDataToview.createdAt | date:'medium'}}</td>
				</tr>
				<tr>
					<td><b>Updated At</b></td>
					<td>{{userDataToview.updatedAt | date:'medium'}}</td>
				</tr>
				<tr>
					<td><b>Operational Status</b></td>
					<td>
						<span class="{{userDataToview.opState !== 'LOCKED' ? 'text-success' : 'text-danger'}}">{{userDataToview.opState}}</span>
						<button ng-if="!userDataToview.ownProfile" ng-click="lockUnlockAccount(userDataToview , 'opState')" class="btn btn-primary m-l-25" title="Lock {{userDataToview.name }}'s account">
							<span ng-bind="userDataToview.opState !== 'LOCKED' ?'Lock':'Unlock'"></span>
						</button>
					</td>
				</tr>
				<tr>
				<td><b>Admin</b></td>
					<td>
						<span class="{{userDataToview.admin ? 'text-success' : 'text-muted'}}">{{userDataToview.admin}}</span>
						<span ng-if="!userDataToview.ownProfile">
							<button ng-click="lockUnlockAccount(userDataToview , 'admin')" class="btn btn-primary m-l-25" title="{{!userDataToview.admin? 'Grant admin rights to' : 'Revoke admin rights from'}} {{userDataToview.name}}">
								<span ng-bind="!userDataToview.admin ? 'Grant' : 'Revoke'"></span>
							</button>
							
						</span>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="alert alert-danger" ng-if="!userDataToview.exists">
			<span>Could not find the requested user data</span>
		</div>
	</div>
    <% } %>
</div>